package edu.asu.stratego.gui;

import java.awt.*;
import java.awt.event.*; 
import javax.swing.*;
import javax.swing.ImageIcon.*;
import javax.swing.JFrame;
import javax.imageio.*;
import java.awt.image.*;
import java.io.*;

public class MainMenu {
	private JFrame m_MainFrame;
	private JPanel m_ButtonPanel;
	private JLabel m_FrameBackground,m_PanelBackground;
	private JButton b_Server,b_Client,b_Exit;
	private int m_ScreenWidth,m_ScreenHeight;
	
	public MainMenu(){
		
	}
	
	public void createComponents(){
		GraphicsDevice gd = GraphicsEnvironment.getLocalGraphicsEnvironment().getDefaultScreenDevice();
		m_ScreenWidth = gd.getDisplayMode().getWidth();
		m_ScreenHeight = gd.getDisplayMode().getHeight();
		
		m_MainFrame = new JFrame("Stratego Main Menu");
		
		m_ButtonPanel = new JPanel();
		
		m_FrameBackground = new JLabel(new JLabel(new ImageIcon(ImageIO.read(new File("C:\J\SER216\SER-216-Stratego-\Stratego\src\edu\asu\stratego\media\images\MainMenu")))));
		m_PanelBackground = new JLabel();
		
		b_Server = new JButton();
		b_Client = new JButton();
		b_Exit = new JButton();
		
	}

	public void buildComponents(){
		m_MainFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		m_MainFrame.setContentPane(contentPane);
		
	}

}
